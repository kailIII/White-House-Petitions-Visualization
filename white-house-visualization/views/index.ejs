<body ng-app="petitionVis">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <ui-view></ui-view>
    </div>
  </div>

  <script type="text/ng-template" id="/home.html">
	<div class="page-header">
	  <h1 header>White House Data Vis</h1>
	</div>

	<button class="btn btn-primary">Test</button>
        <div class="btn-group">
            <a href="javascript:void(0)" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                Sort
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li><a href="javascript:void(0)" ng-click="sort()">Option 1</a></li>
                <li><a href="javascript:void(0)" ng-click="sort()">Option 2</a></li>
                <li><a href="javascript:void(0)" ng-click="sort()">Option 3</a></li>
            </ul>
    </div>


<div infinite-scroll="loadMore()" infinite-scroll-distance="3">
  <div ng-repeat="petition in petitions">
	<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
	  <div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 panelheader class="panel-title"><a href={{petition.url}}>{{$index +1}}. {{petition.title}}</a></h3>
		  </div>
		  <div class="panel-body">
		    <p>{{petition.body}}</p>
		    <p>Signature ID: {{petition.petitionId}}</p>
		    <p>Signature Threshold: {{petition.signaturThreshold}}</p>
		    <p>Signature Count: {{petition.signatureCount}}</p>
		    <p>Signatures Needed: {{petition.signaturesNeeded}}</p>
		    <p>Deadline: {{petition.deadline}}</p>
		    <p>Status: {{petition.status}}</p>
		    <p>Response: {{petition.response}}</p>
		    <p>Created: {{petition.created}}</p>
		    <p>Signable: {{petition.isSignable}}</p>
		    <p>Public: {{petition.isPublic}}</p>

		    <div class="progress progress-striped active">
                <div progress class="progress-bar" ng-style="{ 'width' : '{{petition.signatureProgress}}%' }"></div>
            </div>
		  </div>
		</div>
  </div>
	</div>
	</div>
  </script>
</body>
</html>